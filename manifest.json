{
  "manifest_version": 3,
  "name": "Accountability Bubble",
  "version": "1.0",
  "description": "Your AI accountability coach that lives in your browser",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "tabs"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/detector.js", "content/tracker.js", "content/bubble.js"],
      "css": ["content/bubble.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Accountability Bubble Settings"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
} 